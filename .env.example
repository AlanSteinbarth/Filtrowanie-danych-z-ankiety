# Environment Configuration Example
# Copy this file to .env and update the values as needed

# Application Settings
APP_TITLE="Survey Data Filtering Dashboard"
APP_DESCRIPTION="Advanced data filtering and visualization tool for survey analysis"
APP_VERSION="2.0.0"

# Data Configuration
DEFAULT_DATA_FILE="35__welcome_survey_cleaned.csv"
MAX_FILE_SIZE_MB=100
SUPPORTED_FILE_TYPES="csv,xlsx,xls"

# UI Configuration
PAGE_TITLE="Survey Data Filter"
PAGE_ICON="ðŸ“Š"
LAYOUT="wide"
SIDEBAR_STATE="expanded"

# Performance Settings
CACHE_TTL=3600
MAX_ROWS_DISPLAY=10000
CHUNK_SIZE=1000

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE="app.log"

# Security Settings
ALLOWED_EXTENSIONS=".csv,.xlsx,.xls"
MAX_UPLOAD_SIZE="200MB"

# Feature Flags
ENABLE_FILE_UPLOAD=true
ENABLE_DATA_EXPORT=true
ENABLE_ADVANCED_FILTERING=true
ENABLE_CHARTS=true
ENABLE_STATISTICS=true

# Development Settings
DEBUG_MODE=false
SHOW_PERFORMANCE_METRICS=false
ENABLE_PROFILING=false

